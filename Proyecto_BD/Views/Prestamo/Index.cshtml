

@model System.Data.DataTable
@{
    ViewBag.Title = "Index";
}

    <head>
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    </head>
<h2>PRÉSTAMOS REALIZADOS</h2>

<div class="col-lg-12" style="margin-top:40px">
    <div class="form-group">
        <input type="text" class="form-control" id="txtFiltrarPrestamo" placeholder="Filtrar Préstamo">
    </div>

</div>

<table class="table table-striped text-center center-block">
    <thead>
        <tr>
            <th>Id</th>
            <th>Clave</th>
            <th>Laboratorio</th>
            <th>Laboratorista</th>
            <th>Alumno</th>
            <th>Fecha Préstamo</th>
            <th>Fecha Límite</th>
            <th>Fecha Devolución</th>
            <th>Observaciones</th>
            <th>Estatus</th>
        </tr>
    </thead>
    <tbody id="tblTbodyPrestamo">
        @for (int i = 0; i < Model.Rows.Count; i++)
        {

            <tr>
                <td>@Model.Rows[i][0]</td>
                <td>@Model.Rows[i][1]</td>
                <td>@Model.Rows[i][2]</td>
                <td>@Model.Rows[i][3]</td>
                <td>@Model.Rows[i][4]</td>
                <td>@Model.Rows[i][5]</td>
                <td>@Model.Rows[i][6]</td>
                <td>@Model.Rows[i][7]</td>
                <td>@Model.Rows[i][8]</td>
                <td>@Model.Rows[i][9]</td>
            </tr>
        }
    </tbody>
</table>
<div>
    <button class="button" style="vertical-align:middle"><span>@Html.ActionLink("Realizar Préstamo", "Create", null, new { style = "color: #FFFFFF;" })</span></button>
</div>



<script>

    $("#txtFiltrarPrestamo").on("keyup", function () {
        
        var value = $(this).val().toLowerCase();
        $("#tblTbodyPrestamo tr").filter(function () {
            $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
        });
    });


    

</script>