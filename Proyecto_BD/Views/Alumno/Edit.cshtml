@model Proyecto_BD.Models.Persona

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Persona</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label for="idAlumno" class="control-label col-md-2">Id Alumno</label>
            <div class="col-md-10">
                <input type="text" class="form-control" maxlength="11" id="idAlumno" name="idAlumno" value="@(ViewBag.idAlumno)" readonly>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.nombre, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.nombre, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.nombre, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.apPaterno, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.apPaterno, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.apPaterno, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.apMaterno, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.apMaterno, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.apMaterno, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.direccion, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.direccion, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.direccion, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.codigoPostal, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.codigoPostal, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.codigoPostal, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.telefono, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.telefono, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.telefono, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label for="Generos" class="control-label col-md-2">Sexo</label>
            <div class="col-md-10">
                <select name="Generos" id="Generos" class="form-control">
                    @foreach (var item in ViewBag.sexo)
                    {
                        if (item == ViewBag.genero)
                        {
                            <option value="@item" selected>
                                @item
                            </option>
                        }
                        else
                        {
                            <option value="@item">
                                @item
                            </option>
                        }
                        //Fue un pedo hacer esto amigos :(


                    }
                </select>
            </div>
        </div>

        <div class="form-group">
            <label for="Carreras" class="control-label col-md-2">Carrera</label>
            <div class="col-md-10">
                <select name="Carreras" id="Carreras" class="form-control">
                    @foreach (var item in ViewBag.carreras)
                    {
                        if (item == ViewBag.nombreCarrera)
                        {
                            <option value="@item" selected>
                                @item
                            </option>
                        }
                        else
                        {
                            <option value="@item">
                                @item
                            </option>
                        }
                        //Fue un pedo hacer esto amigos :(
                    }
                </select>
            </div>
        </div>

        <div class="form-group">
            <label for="Grupos" class="control-label col-md-2">Grupo</label>
            <div class="col-md-10">
                <select name="Grupos" id="Grupos" value="@(ViewBag.nombreGrupo)" class="form-control">
                    @foreach (var item in ViewBag.grupos)
                    {
                        if (item == ViewBag.nombreGrupo)
                        {
                            <option value="@item" selected>
                                @item
                            </option>
                        }
                        else
                        {
                            <option value="@item">
                                @item
                            </option>
                        }
                        //Fue un pedo hacer esto amigos :(
                    }
                </select>
            </div>
        </div>

        <h3>Datos de usuario</h3><br />
        <div class="form-group">
            <label for="password" class="control-label col-md-2">Constraseña</label>
            <div class="col-md-10">
                <input type="password" class="form-control" maxlength="60" id="password" name="password" value="@(ViewBag.password)">
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Guardar" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
