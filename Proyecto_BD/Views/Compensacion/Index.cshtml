@model System.Data.DataTable
<h2 class="h2">compensación</h2>
<head>
    <!--jquery para el filtro de la tabla-->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script>
        $(document).ready(function () {
            $("#searchInput").on("keyup", function () {
                var value = $(this).val().toLowerCase();
                $("#tb_Compensacion tr").filter(function () {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });
        });
    </script>
</head>
<div class="form-group">
    <input type="text" class="form-control" id="searchInput" aria-describedby="Buscar" placeholder="Buscar">
</div>
<table class="table" style="align-items: center" id="tb_Compensacion">
    <thead>
        <tr>
            <th scope="col">Id Préstamo</th>
            <th scope="col">Clave del Préstamo</th>
            <th scope="col">Nombre del laboratorio</th>
            <th scope="col">Nombre del laboraorista</th>
            <th scope="col">Nombre del alumno</th>
            <th scope="col">Fecha del Préstamo</th>
            <th scope="col">Fecha limite Préstamo</th>
            <th scope="col">Fecha devolución material</th>
            <th scope="col">Fecha Compensación</th>
            <th scope="col">Pago multa</th>
            <th scope="col">Observaciones</th>
            <th scope="col">Estatus</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Rows.Count; i++)
        {
        <tr>
            <td>@Model.Rows[i][0]</td>
            <td>@Model.Rows[i][1]</td>
            <td>@Model.Rows[i][2]</td>
            <td>@Model.Rows[i][3]</td>
            <td>@Model.Rows[i][4]</td>
            <td>@Model.Rows[i][5]</td>
            <td>@Model.Rows[i][6]</td>
            <td>@Model.Rows[i][7]</td>
            <td>@Model.Rows[i][8]</td>
            <td>@Model.Rows[i][9]</td>
            <td>@Model.Rows[i][10]</td>
            <td>@Model.Rows[i][11]</td>
            <td></td>
        </tr>
        }
    </tbody>
</table>
<div>
    <button class="button" style="vertical-align:middle"><span>@Html.ActionLink("Insert Compensación", "Create", null, new { style = "color: #FFFFFF;" })</span></button>
</div>